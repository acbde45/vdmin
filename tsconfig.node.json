{
  "compilerOptions": {
    "composite": true, // 对于引用项目必须设置该属性
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true, // 允许使用 import 导入使用 export = 导出的默认内容
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "#types/*": ["./types/*"]
    }
  },
  "include": [
    "vite.config.ts",
    "windi.config.ts",
    "build/**/*.ts",
    "types/**/*.d.ts",
    "package.json"
  ]
}
